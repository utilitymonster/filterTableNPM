// api_load.js
var $ = require('jquery');

var api_load = function (url, next) {
	var results = [];

	$.ajax({ 
		url: url, 
		dataType: 'json', 
		success: function (data) {
			results = results.concat(data.results);
			if (data[next]) {
				url = data[next];
				api_load(url);} else 
			{

				return results;
				/*				temp_this.setState({
    					data:results
    				})*/}} });};





module.exports = api_load;